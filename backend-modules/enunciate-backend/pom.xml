<?xml version="1.0" encoding="UTF-8"?>
<project>
	<parent>
		<artifactId>backend-modules</artifactId>
		<groupId>org.vpac.grisu</groupId>
		<version>0.3-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>enunciate-backend</artifactId>
	<packaging>war</packaging>
	<name>Grisu-API</name>
	<description>A module that takes care of creating SOAP, REst &amp;
		GWT-RPC endpoints for a Grisu backend. It also automatically creates
		Java, C#, C and Ruby client stubs.</description>
	<url>http://maven.apache.org</url>
	<inceptionYear>2009</inceptionYear>
	<organization>
		<name>ARCS</name>
		<url>http://www.arcs.org.au</url>
	</organization>

	<properties>
		<enunciate.version>1.16-RC2</enunciate.version>
	</properties>

	<dependencies>

		<dependency>
			<groupId>org.codehaus.enunciate</groupId>
			<artifactId>enunciate-gwt-rt</artifactId>
			<version>${enunciate.version}</version>
		</dependency>

		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-user</artifactId>
			<version>1.6.4</version>
		</dependency>

		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-servlet</artifactId>
			<version>1.6.4</version>
		</dependency>

		<dependency>
			<groupId>org.codehaus.enunciate</groupId>
			<artifactId>enunciate-cxf-rt</artifactId>
			<version>${enunciate.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>asm</artifactId>
					<groupId>asm</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<dependency>
			<groupId>org.codehaus.enunciate</groupId>
			<artifactId>enunciate-jersey-rt</artifactId>
			<version>${enunciate.version}</version>
		</dependency>

		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>spring-security-core-tiger</artifactId>
			<version>2.0.1</version>
			<exclusions>

				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-aop</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-beans</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-dao</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-context</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-core</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>spring-security-taglibs</artifactId>
			<version>2.0.1</version>
			<exclusions>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-web</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-tx</artifactId>
			<version>2.5.4</version>
		</dependency>
		<dependency>
			<groupId>org.aspectj</groupId>
			<artifactId>aspectjrt</artifactId>
			<version>1.5.4</version>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.5</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>au.org.arcs.commons</groupId>
			<artifactId>arcs-jcommons</artifactId>
			<version>1.1-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>au.org.arcs.commons</groupId>
			<artifactId>arcs-jcommons</artifactId>
			<version>1.1-SNAPSHOT</version>
			<classifier>sources</classifier>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.vpac.grisu</groupId>
			<artifactId>grisu-commons</artifactId>
			<version>0.3-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.vpac.grisu</groupId>
			<artifactId>grisu-commons</artifactId>
			<version>0.3-SNAPSHOT</version>
			<classifier>sources</classifier>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>org.vpac.grisu</groupId>
			<artifactId>grisu-core</artifactId>
			<version>0.3-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>org.vpac.grisu</groupId>
			<artifactId>grisu-client</artifactId>
			<version>0.3-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.vpac.grisu</groupId>
			<artifactId>grisu-client</artifactId>
			<version>0.3-SNAPSHOT</version>
			<classifier>sources</classifier>
			<scope>compile</scope>
		</dependency>

	</dependencies>

	<build>
		<plugins>

			<plugin>
				<groupId>org.codehaus.enunciate</groupId>
				<artifactId>maven-enunciate-cxf-plugin</artifactId>
				<version>${enunciate.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>assemble</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
				
					<dependency>
						<groupId>org.codehaus.enunciate</groupId>
						<artifactId>enunciate-xfire-client</artifactId>
						<version>${enunciate.version}</version>
					</dependency>

				</dependencies>

		</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<executions>
					<execution>
						<id>deploy-client-classes-jaxws</id>
						<phase>deploy</phase>
						<goals>
							<goal>deploy-file</goal>
						</goals>
						<configuration>

							<file>target/enunciate/build/jaxws-client/grisu-client-jaxws.jar
							</file>
							<url>${project.distributionManagementArtifactRepository.url}
							</url>
							<repositoryId>${project.distributionManagementArtifactRepository.id}
							</repositoryId>

							<groupId>org.vpac.grisu</groupId>
							<artifactId>grisu-client-jaxws</artifactId>
							<version>${project.version}</version>
							<packaging>jar</packaging>
							<uniqueVersion>false</uniqueVersion>
							<pomFile>client-jaxws.pom</pomFile>
						</configuration>
					</execution>
					<execution>
						<id>deploy-client-sources-jaxws</id>
						<phase>deploy</phase>
						<goals>
							<goal>deploy-file</goal>
						</goals>
						<configuration>

							<file>target/enunciate/build/jaxws-client/grisu-client-jaxws-src.jar
							</file>
							<url>${project.distributionManagementArtifactRepository.url}
							</url>
							<repositoryId>${project.distributionManagementArtifactRepository.id}
							</repositoryId>

							<groupId>org.vpac.grisu</groupId>
							<artifactId>grisu-client-jaxws</artifactId>
							use this project's version
							<version>${project.version}</version>
							<packaging>jar</packaging>
							<classifier>sources</classifier>
							<uniqueVersion>false</uniqueVersion>
							<pomFile>client-jaxws.pom</pomFile>
						</configuration>
					</execution>
										<execution>
											<id>deploy-client-classes-xfire</id>
											<phase>deploy</phase>
											<goals>
												<goal>deploy-file</goal>
											</goals>
											<configuration>
					
						<file>target/enunciate/build/xfire-client/grisu-client-xfire-1.5.jar
					
												</file>
					
						<url>${project.distributionManagementArtifactRepository.url}
					
												</url>
					
						<repositoryId>${project.distributionManagementArtifactRepository.id}
					
												</repositoryId>

												<groupId>org.vpac.grisu</groupId>
												<artifactId>grisu-client-xfire</artifactId>
												<version>${project.version}</version>
												<packaging>jar</packaging>
												<uniqueVersion>false</uniqueVersion>
												<pomFile>client-xfire.pom</pomFile>
											</configuration>
										</execution>
										<execution>
											<id>deploy-client-sources-xfire</id>
											<phase>deploy</phase>
											<goals>
												<goal>deploy-file</goal>
											</goals>
											<configuration>
					
						<file>target/enunciate/build/xfire-client/grisu-client-xfire-1.5-src.jar
					
												</file>
					
						<url>${project.distributionManagementArtifactRepository.url}
					
												</url>
					
						<repositoryId>${project.distributionManagementArtifactRepository.id}
					
												</repositoryId>

												<groupId>org.vpac.grisu</groupId>
												<artifactId>grisu-client-xfire</artifactId>
												<version>${project.version}</version>
												<packaging>jar</packaging>
					
						<description>The client-side classes for our api.</description>
					
												<classifier>sources</classifier>
												<uniqueVersion>false</uniqueVersion>
												<pomFile>client-xfire.pom</pomFile>
											</configuration>
										</execution>
					<execution>
						<id>deploy-client-classes-gwt</id>
						<phase>deploy</phase>
						<goals>
							<goal>deploy-file</goal>
						</goals>
						<configuration>
	
							<file>target/enunciate/build/gwt/Grisu-gwt-client.jar
							</file>
								<url>${project.distributionManagementArtifactRepository.url}
							</url>
	
							<repositoryId>${project.distributionManagementArtifactRepository.id}
							</repositoryId>

							<groupId>org.vpac.grisu</groupId>
							<artifactId>grisu-client-enunciate-gwt</artifactId>
	
							<version>${project.version}</version>
							<packaging>jar</packaging>

								<uniqueVersion>false</uniqueVersion>
							<pomFile>client-gwt.pom</pomFile>
						</configuration>
					</execution>
				</executions>
				<configuration>
	
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
			</plugin>

		</plugins>
	</build>

</project>
